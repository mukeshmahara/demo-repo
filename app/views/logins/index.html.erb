<p id="notice"><%= notice %></p>

<h1>Total User logged-in to the System</h1>

<table class="table table-striped border">
  <thead>
    <tr>
      <th>Usernames</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logins.each do |login| %>
      <tr>
        <td><%= login.username %></td>
        <td><%= link_to 'Show', login ,:class=>'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_login_path(login), :class=>'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Destroy',login, method: :delete,:class=>'btn btn-outline-danger', data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Login', new_login_path ,:class=>'btn btn-outline-success'%>
